<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_dark</item>

        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:windowBackground">@android:color/background_dark</item>


        <item name="navigationViewStyle">@style/styleNavView</item>
        <item name="editTextStyle">@style/styleEditText</item>
        <item name="android:textViewStyle">@style/styleTextView</item>
        <item name="seekBarStyle">@style/styleSeekBar</item>
        <!--        <item name="buttonStyle">@style/styleButton</item>-->

    </style>

    <style name="styleSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@android:color/background_light</item>
    </style>

    <style name="styleButton" parent="android:Widget.Material.Light.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>


    <style name="styleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@android:color/tertiary_text_light</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="styleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="styleNavView" parent="Widget.Design.NavigationView">
        <item name="itemTextColor">@android:color/primary_text_dark</item>
        <item name="itemIconTint">@android:color/primary_text_dark</item>
    </style>

</resources>
