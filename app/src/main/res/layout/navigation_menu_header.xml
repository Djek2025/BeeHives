<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/change_apiary_btn"
        android:background="#00000000"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:clickable="true"
        android:focusable="true"
        app:iconTint="@color/primaryTextColor"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:icon="@drawable/round_arrow_drop_down_24"
        app:iconSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/header_apiary_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintBottom_toTopOf="@id/header_hives_count"
        app:layout_constraintStart_toStartOf="@id/header_hives_count"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_hives_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_margin="8dp"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>