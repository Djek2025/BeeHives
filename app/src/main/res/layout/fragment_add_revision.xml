<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.fragments.AddRevisionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">

        <TextView
            android:id="@+id/revisionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="@string/revision"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/selectDate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@drawable/button_circle"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/revisionTextView" />

<!--————————————————————————————————————————— Strength ——————————————————————————————————————————-->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:indeterminate="false"
            android:progress="50"
            app:layout_constraintEnd_toStartOf="@+id/percents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/strengthTextView" />

        <TextView
            android:id="@+id/strengthTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/strength"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectDate" />

        <TextView
            android:id="@+id/percents"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/seekBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/seekBar"
            app:layout_constraintTop_toTopOf="@+id/seekBar" />

<!--————————————————————————————————————————— Frames installed editText —————————————————————————-->
        <TextView
            android:id="@+id/framesInstalledTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/frames_installed"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" />

        <Button
            android:id="@+id/buttonAddFrameField"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/round_add_circle_24"
            android:backgroundTint="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@drawable/button_circle"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/framesInstalledTextView" />

        <TextView
            android:id="@+id/textViewOf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="of"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/editTextFramesInstall"
            app:layout_constraintStart_toEndOf="@+id/editTextFramesInstall"
            app:layout_constraintTop_toTopOf="@+id/editTextFramesInstall" />

        <EditText
            android:id="@+id/editTextFramesInstall"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/background_for_edit_text"
            android:backgroundTint="#17000000"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:minWidth="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintTop_toTopOf="@+id/editText" />

        <EditText
            android:id="@+id/editTextFramesInstallOf"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:background="@drawable/background_for_edit_text"
            android:backgroundTint="#17000000"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:minWidth="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewOf"
            app:layout_constraintStart_toEndOf="@+id/textViewOf"
            app:layout_constraintTop_toTopOf="@+id/textViewOf" />

<!--————————————————————————————————————————— Note ——————————————————————————————————————————————-->
        <EditText
            android:id="@+id/editTextFrameSize"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:background="@drawable/background_for_edit_text"
            android:backgroundTint="#17000000"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:minWidth="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewSize"
            app:layout_constraintStart_toEndOf="@+id/textViewSize"
            app:layout_constraintTop_toTopOf="@+id/textViewSize" />

        <TextView
            android:id="@+id/textViewSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Size(mm):"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/editTextFramesInstallOf"
            app:layout_constraintStart_toEndOf="@+id/editTextFramesInstallOf"
            app:layout_constraintTop_toTopOf="@+id/editTextFramesInstallOf" />

        <TextView
            android:id="@+id/noteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/note"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonAddFrameField" />

        <EditText
            android:id="@+id/noteEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/frame_for_note"
            android:gravity="top"
            android:inputType="textMultiLine|text"
            android:minHeight="306dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noteTextView" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/baseline_save_24"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>